<%= render 'layouts/header' %>

<h1>Update user #<%= @user['id'] %></h1>

<h2><%= @user.errors.full_messages.first if @user.errors.any? %></h2>

<!-- SIMPLE FORM -->
<%= simple_form_for @user do |f| %>
	<%= f.input :first_name %>
	<%= f.input :last_name %>
	<%= f.input :email_address %>
	<%= f.input :password %>
	<%= f.button :submit %>
<% end %>


